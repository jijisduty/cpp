// //////////////////// Exercise 1:

#include <iostream>
using namespace std;


int main(){
    int i = 0;
    int j = 0;
    int x = 0;
    for(i = 7; i>x; i--){
     cout << endl;
            for(j=7;j>=i;j--){
                     cout << '*';
    }
    }
}

